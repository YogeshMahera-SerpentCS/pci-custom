<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_saleorder_document"
              inherit_id="sale.report_saleorder_document">

        <!-- remove tax info -->
        <xpath expr="//table[@class='table table-condensed']/thead/tr/th[5]"
               position="replace"/>
        <xpath expr="//tbody[@class='sale_tbody']/t/t/tr/td[5]"
               position="replace"/>

        <!-- show serial # -->
        <xpath expr="//tbody[@class='sale_tbody']/t/t/tr/td/span"
               position="after">
            <li t-if="l.lot_id.name">
                Serial #:
                <span t-field="l.lot_id.name"/>
            </li>
        </xpath>

    </template>

</odoo>
