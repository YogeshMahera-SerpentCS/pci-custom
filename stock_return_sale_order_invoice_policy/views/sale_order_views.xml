<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='confirmation_date']" position="before">
                <field name="update_invoice_policy" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="before">
                <button name="update_order_invoice_policy" attrs="{'invisible': [('update_invoice_policy', '=', False)]}" type="object" string="Update Invoice Policy"/>
            </xpath>
        </field>
    </record>

</odoo>
