<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_invoice_policy_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.order.invoice.policy.report.wizard.form</field>
        <field name="model">sale.order.invoice.policy.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="invoice_policy"/>
                </group>
                <footer>
                    <button name="update_order_invoice_policy" type="object" string="Update Order" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
